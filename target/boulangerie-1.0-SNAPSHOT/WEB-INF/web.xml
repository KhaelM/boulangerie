    <servlet>
        <servlet-name>Possible</servlet-name>
        <servlet-class>fr.michael.randrianarisona.boulangerie.controller.Possible</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Valider</servlet-name>
        <servlet-class>fr.michael.randrianarisona.boulangerie.controller.Valider</servlet-class>
