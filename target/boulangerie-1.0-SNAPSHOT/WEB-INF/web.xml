    <listener>
        <listener-class>fr.michael.randrianarisona.boulangerie.init.DAOInit</listener-class>
    </listener>
    <servlet>
        <servlet-name>projection</servlet-name>
        <servlet-class>fr.michael.randrianarisona.boulangerie.controller.Projection</servlet-class>
